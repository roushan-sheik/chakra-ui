{
  "name": "mynextsoftapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "env": "bash scripts/env.sh",
    "dev": "npm run env && next dev",
    "build": "npm run tokens && npm run env && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint \"src/**/*.{js,ts,tsx}\" --fix && prettier --write \"src/**/*.{js,ts,tsx}\"",
    "start:prod": "next start -p 80",
    "tokens": "npx @chakra-ui/cli typegen ./src/styles/theme/index.ts",
    "tokens:watch": "npx @chakra-ui/cli typegen ./src/styles/theme/index.ts --watch",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.8.1",
    "@emotion/react": "^11.14.0",
    "@tanstack/react-query": "^5.66.5",
    "es-toolkit": "^1.34.1",
    "lucide-react": "^0.475.0",
    "motion": "^12.4.7",
    "nexios": "^1.0.5",
    "next": "^15.2.3",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-ga4": "^2.1.0",
    "swiper": "^11.2.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/eslint-plugin-next": "^15.1.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.9",
    "@vitest/ui": "^3.0.9",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.3",
    "postcss-simple-vars": "^7.0.1",
    "typescript": "^5",
    "vitest": "^3.0.9"
  }
}
